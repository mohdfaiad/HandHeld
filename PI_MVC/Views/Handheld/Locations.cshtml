@model IEnumerable<PI_Models.Location>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        .bold {
            font-weight: bold;
        }
    </style>
</head>
<body>

        <div>Last Location: @ViewBag.locationcode</div>
        <div><h1>Locations</h1></div>
        <div>

            @foreach (var l in Model)
            {
                <div>@Html.ActionLink(l.locationName + "(" + l.locationCode + ")", "LocationItems", new { l.locationCode }, null)</div>
            }


        </div>

</body>
</html>
