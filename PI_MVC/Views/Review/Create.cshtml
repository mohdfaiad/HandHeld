@model PI_Models.Review
@using PI_Abstract;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    @using (Html.BeginForm())
    {

        <div>
            <div>

                <input type="submit" value="Save" name="Save" />

            </div>

            @if (Model != null)
            {
               <div>Review Name: @Html.EditorFor(m=>m.name)</div>

                for (var i = 0; i < Model.Scans.Count; i++)
                {
                    <ul>
                        <li>
                            <span>
                                @Html.HiddenFor(x => Model.Scans[i].PhysicalInventoryID)
                                @Html.DisplayFor(x => Model.Scans[i].PhysicalInventoryID) &nbsp;
                                @Html.DisplayFor(x => Model.Scans[i].LocationName) &nbsp;
                                @Html.DisplayFor(x => Model.Scans[i].StartDate) &nbsp;
                                @Html.DisplayFor(x => Model.Scans[i].Status) &nbsp;
                                @Html.DisplayFor(x => Model.Scans[i].User) &nbsp;
                                @Html.CheckBoxFor(x => Model.Scans[i].Select)
                            </span>
                        </li>
                    </ul>

                }


            }


        </div>


    }
</body>
</html>
